.head PUBLICATIONS
.subhead papers
.row(
  data-stein-url='https://api.steinhq.com/v1/storages/5efd782883c30d0425e2c5ba/pub_paper',
  data-stein-limit='100'
) 
  .col-12.col-lg-6.pr-md-5.pb-5
    .mono #[strong {{year}}] {{month}} {{day}}
    .paragraph {{title}}

    .tiny {{author}} {{journal}} #[strong {{volume}}]{{issue}} {{pages}}.
    .tiny doi: #[a(href='{{ paper_doi }}') {{paper_doi}}] | #[a(href='{{ manuscript_url }}') Manuscript] ({{manuscript_type}})
.subhead thesis
.row(
  data-stein-url='https://api.steinhq.com/v1/storages/5efd782883c30d0425e2c5ba/pub_thesis',
  data-stein-limit='100'
) 
  .col-12.col-lg-6.pr-md-5.pb-5
    .mono #[strong {{year}}] {{month}}
    .paragraph {{title}}

    .tiny {{author}} {{type}}. {{pages}}
    .tiny #[a(href='{{ slide_url }}') defense slide ({{slide_type}}, {{slide_size}})] | #[a(href='{{ manuscript_url }}') ({{manuscript_type}} {{manuscript_size}})]
